<!DOCTYPE html>
<html>
<head>
  <title>URL shortener</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">URL Shortener</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t(:listing_urls) %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:all_listing_urls), urls_path %></li>
                <li><%= link_to t(:my_listing_urls), my_path %></li>
              </ul>
            </li>
            <li><%= link_to t(:new_url), new_url_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t(:reports) %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:report_all_days), reports_path %></li>
                <li><%= link_to t(:report_per_day), per_day_path %></li>
              </ul>
            </li>
          </ul>
          <p class="navbar-text navbar-right">
            <%= t(:urls_count) %> 
            <%= session[:count]  %>
            <%= t(:price) %>
            <%= number_to_currency(session[:price], unit: "$", format: "%u %n") %>
          </p>
        </div>
      </div>
    </nav>
    <p id="notice"> <span class="label label-warning"><%= notice %></span></p>
    <%= yield %>
  </div>
</body>
</html>

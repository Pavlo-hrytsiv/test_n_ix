<%= form_for(@url) do |f| %>
  <% if @url.errors.any? %>
    <div class="row">
      <div class="col-md-12">
        <% @url.errors.full_messages.each do |message| %>
          <span class="label label-danger">
            <%= message %>
          </span>
          <br>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <%= t(:input_url) %><br>
      <%= f.text_field :full_url, :style => "width: 600px", placeholder: "http://centrmebliv.com.ua/stoly-ta-stiltsi/stoly-zi-sklyanoyu-poverhneyu/Page-6-20" %>
      <%= f.submit t(:shorten) %>
    </div>
  </div>
<% end %>
